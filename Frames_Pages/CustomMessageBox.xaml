<Window x:Class="Frames_Pages.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frames_Pages"
        mc:Ignorable="d"
        Title="Message" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"  SizeToContent="WidthAndHeight">
    <Grid>
       
        <Grid.Background>
            <ImageBrush ImageSource="Resources/bgDarkEnhanced.jpg"/>
        </Grid.Background>
        <TextBlock x:Name="CustomText" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20" FontWeight="Bold" Grid.ColumnSpan="2" Margin="13,55,11.6,54"/>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="113,0,112.6,10" Click="OKButton_Click" Width="68" Height="19" Grid.ColumnSpan="2" Background="#FF338A8A"/>
    </Grid>
</Window>
